.float-right {
    float: right;
}

.score {
    border: 1px solid gray;
    margin-bottom: 10px;
    padding: 10px;
}

.player {
    border: 1px solid gray;
    margin-bottom: 10px;
    padding: 10px;
    height: 150px;

    > * {
        text-align: center;
    }

    &.active {
        background: #0F0;
    }
}

.board-col {
    padding: 0;

    .board {
        width: 800px;
        height: 800px;
        padding: 0;
        background-color: burlywood;
        
        .board-cell {
            width: 100px;
            height: 100px;
            float: left;
            border: 1px solid;
            position: absolute;

            &.white {
                background: transparent;
            }

            &.black {
                background: #776;
            }

            &.test {
                background: red;
            }
        }

        .figure.checker {
            width: 80px;
            height: 80px;
            margin: 10px;
            border-radius: 50%;
            position: absolute;
        }

        .board-overlay {
            width: 100%;
            height: 100%;
            position: relative;
            background: rgba(0, 255, 0, 0.2);
            box-shadow: 0 0 100px green;

            .text {
                position: absolute;
                width: 300px;
                height: 200px;
                top: 50%;
                left: 50%;
                margin-top: -100px;
                margin-left: -150px;
                background: #FFA;
                text-align: center;
            }
        }
    }
}
